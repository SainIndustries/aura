<!-- TERMINAL DEMO -->
<section class="demo">
  <div class="term">
    <div class="term-bar">
      <span class="term-dot"></span>
      <span class="term-dot"></span>
      <span class="term-dot"></span>
      <span class="term-label">aura ¬∑ active session</span>
    </div>
    <div class="term-body">
